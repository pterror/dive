{
  "extends": "@tsconfig/strictest/tsconfig.json",
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "preserve",
    "composite": true,
    "importHelpers": true,
    "skipLibCheck": true,
    "erasableSyntaxOnly": true,
    "forceConsistentCasingInFileNames": true,
    // Vue (VLS) does not support `isolatedDeclarations` as it heavily depends on
    // type inference.
    // "isolatedDeclarations": true,
    "verbatimModuleSyntax": true,
    "sourceMap": true,
    "baseUrl": "."
  },
  "exclude": ["node_modules", "dist"]
}
